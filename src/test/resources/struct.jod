                        "SubSubComp" : {
                            "type": "BooleanState",
                            "listener" : "ciao://none"
                        }
                    }
                },
                "CompStateP1" : {
                    "type": "BooleanState",
                    "listener" : "ciao://none"
                },
                "CompStateP2" : {
                    "type": "BooleanState",
                    "listener" : "ciao://none"
                }
            }
